{% extends 'base.html.twig' %}

{% block title %}Hello EntrepriseController!{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>
    {% for entreprise in entreprises %}
        <p><a href="{{ path('show_entreprise', {'id': entreprise.id})}}">{{entreprise}}</a></p>
        <a class="btn btn-warning" href="{{ path('edit_entreprise', {'id' : entreprise.id})}}">Edit</a>
        <a href="{{ path('delete_entreprise', {'id': entreprise.id})}}" class="btn btn-danger">Supprimer</a>
    {% endfor %}
{% endblock %}
